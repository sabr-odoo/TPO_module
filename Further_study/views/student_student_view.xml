<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <!-- application Form  Menu under student -->
        <record id="Create_Application_Under_student_menu_1" model="ir.actions.act_window">
            <field name="name">Application Form</field>
            <field name="res_model">student.student</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="application_view_design_form_1" model="ir.ui.view">
            <field name="name">application Form View</field>
            <field name="model">student.student</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="form_design_view_applcation_form_1" model="ir.ui.view">
            <field name="name">Design form</field>
            <field name="model">student.student</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="name" />
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>