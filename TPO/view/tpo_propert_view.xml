<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <!-- Tecaher Menu under Placement-->
        <record id="Create_teacher_Under_placement_menu" model="ir.actions.act_window">
            <field name="name">Teacher</field>
            <field name="res_model">teacher.placement</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Student Menu under Placement-->
        <record id="Create_student_Under_placement_menu" model="ir.actions.act_window">
            <field name="name">Student</field>
            <field name="res_model">student.placement</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- application Form  Menu under student -->
        <record id="Create_Application_Under_student_menu" model="ir.actions.act_window">
            <field name="name">Application Form</field>
            <field name="res_model">application.student</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="application_view_design_form" model="ir.ui.view">
            <field name="name">application Form View</field>
            <field name="model">application.student</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="Student_id" />
                    <field name="DOB" optional='hide' />
                    <field name="age" optional='hide' />
                    <field name="number" optional='hide' />
                    <field name="email" />
                    <field name="address" optional='hide' />
                    <field name="city" optional='hide' />
                    <field name="dist" optional='hide' />
                    <field name="state" optional='hide' />
                    <field name="pincode" optional='hide' />
                    <field name="branch" />
                    <field name="Career_option" />
                    <field name="passing_year" optional='hide' />
                    <field name="ssc" optional='hide' />
                    <field name="hsc" optional='hide' />
                    <field name="cgpa" optional='hide' />
                    <field name="n_backlog" optional='hide' />
                </tree>
            </field>
        </record>

        <record id="form_design_view_applcation_form" model="ir.ui.view">
            <field name="name">Design form</field>
            <field name="model">application.student</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <label for="name" string="Student Name"></label>
                                <field name="name" nolabel="1" />
                                <label for="Student_id" string="Student ID"></label>
                                <field name="Student_id" nolabel="1" />
                                <label for="email" string="Email-ID"></label>
                                <field name="email" nolabel="1" />
                                <label for="address" string="Address"></label>
                                <field name="address" nolabel="1" />
                                <label for="dist" string="Dist"></label>
                                <field name="dist" nolabel="1" />
                                <label for="pincode" string="Pincode"></label>
                                <field name="pincode" nolabel="1" />

                            </group>
                            <group>
                                <label for="DOB" string="DOB"></label>
                                <field name="DOB" nolabel="1" />
                                <label for="age" string="Age"></label>
                                <field name="age" nolabel="1" />
                                <label for="number" string="Mobile No"></label>
                                <field name="number" nolabel="1" />
                                <label for="city" string="City"></label>
                                <field name="city" nolabel="1" />
                                <label for="state" string="State"></label>
                                <field name="state" nolabel="1" />
                                <label for="branch" string="Branch"></label>
                                <field name="branch" nolabel="1" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Career">
                                <group>
                                    <group>
                                        <label for="Career_option" string="Career Option"></label>
                                        <field name="Career_option" nolabel="1" />
                                    </group>
                                    <group>
                                        <label for="passing_year" string="Passing Year"></label>
                                        <field name="passing_year" nolabel="1" />
                                    </group>
                                </group>
                            </page>
                            <page string="Education">
                                <group>
                                    <group>
                                        <label for="ssc" string="S.S.C"></label>
                                        <field name="ssc" nolabel="1" />
                                        <label for="cgpa" string="CGPA"></label>
                                        <field name="cgpa" nolabel="1" />
                                    </group>
                                    <group>
                                        <label for="hsc" string="H.S.C"></label>
                                        <field name="hsc" nolabel="1" placeholder="123-45-678" />
                                        <label for="n_backlog" string="No BackLog"></label>
                                        <field name="n_backlog" nolabel="1" />
                                    </group>
                                </group>
                            </page>
                        </notebook>
                        <notebook>
                            <page string="Send Message">
                                <input type="text" id="fname" name="fname"
                                    style="height:100px;width:1000px;margin-left:11px"
                                    placeholder="Send Message"></input>
                                <button type="submit" name="send" value="Submit" style="margin:46px">
                                    SEND</button>
                            </page>
                            <page string="Log Note">
                                <hr></hr>
                                <p></p>
                            </page>
                            <page string="Archive">
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Resume Form  Menu under student -->
        <record id="Create_resume_Under_student_menu" model="ir.actions.act_window">
            <field name="name">Resume</field>
            <field name="res_model">resume.student</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Company Deatils  Menu under Company -->
        <record id="Create_deatils_Under_Company_menu" model="ir.actions.act_window">
            <field name="name">Company Deatils</field>
            <field name="res_model">details.company</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="company_deatils_form_view" model="ir.ui.view">
            <field name="name">Company form view</field>
            <field name="model">details.company</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="deapartment" />
                    <field name="stipend" />
                    <field name="website"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>